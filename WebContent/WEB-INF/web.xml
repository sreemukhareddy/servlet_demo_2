<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>UserApp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>dburl</param-name>
    <param-value>jdbc:mysql://localhost:3306/mydb</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>nisum</param-value>
  </context-param>
  <servlet>
    <servlet-name>servletconfigwithwebdotxml</servlet-name>
    <servlet-class>com.servlet_jdbc.UsingServletConfigWithWebDotXML</servlet-class>
    <init-param>
      <param-name>driver</param-name>
      <param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
    <init-param>
      <param-name>dburl</param-name>
      <param-value>jdbc:mysql://localhost:3306/mydb</param-value>
    </init-param>
    <init-param>
      <param-name>user</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>nisum</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletconfigwithwebdotxml</servlet-name>
    <url-pattern>/servletconfigwithwebdotxml</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>servletcontextwithwebdotxml</servlet-name>
    <servlet-class>com.servlet_jdbc.UsingServletContextParametersWithWebDotXML</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletcontextwithwebdotxml</servlet-name>
    <url-pattern>/servletcontextwithwebdotxml</url-pattern>
  </servlet-mapping>
</web-app>